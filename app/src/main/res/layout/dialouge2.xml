<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comment_dialog_view"
    android:layout_width="@dimen/comment_pop_up_width"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/dailyCheckCard_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="120dp"
        app:cardElevation="4dp"
        android:layout_marginRight="20dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                >
                <com.airbnb.lottie.LottieAnimationView
                    android:foregroundTint="@color/white"
                    android:layout_width="80dp"
                    android:id="@+id/deviceanimation"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentRight="false"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="false"
                    app:lottie_fileName="eco.json"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="true"
                    android:layout_gravity="center" />


                <com.nitish.typewriterview.TypeWriterView
                    android:layout_below="@id/deviceanimation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="false"
                    android:padding="8dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/material_drawer_header_selection_subtext"
                    android:fontFamily="@font/montserrat"
                    android:text="THT-Space Electrical Company Ltd is one of most popular company in bangladesh to export printer to others country"
                    android:id="@+id/aboutcompanydetails"
                    android:gravity="center_horizontal" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>







</androidx.constraintlayout.widget.ConstraintLayout>